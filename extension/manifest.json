{
  "manifest_version": 3,
  "name": "Ano — QA Bug Reporting",
  "version": "1.3.8",
  "description": "QA bug reporting on any page. Highlight, pin, draw, and record — export structured context for developers and AI.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
